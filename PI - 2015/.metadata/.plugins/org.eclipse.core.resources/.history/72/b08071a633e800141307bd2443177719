package com.PIGame.Aventure.graficos;

public class Sprite {

	public final int TAMANHO;
	private int larguraX, alturaY;
	public int[] pixels;
	private SpriteSheet lamina;
	
	public static Sprite terra = new Sprite(16, 0, 0, SpriteSheet.tiles);
	public static Sprite vazio = new Sprite(16, 0);
	
	//public static Sprite jogadorback = new Sprite(16,0,3,SpriteSheet.tiles);
	//public static Sprite jogadorback02 = new Sprite(16,1,3,SpriteSheet.tiles);
	//public static Sprite jogadorback03 = new Sprite(16,0,4,SpriteSheet.tiles);
	//public static Sprite jogadorback04 = new Sprite(16,1,4,SpriteSheet.tiles);
	
	public static Sprite player = new Sprite(32, 0, 5, SpriteSheet.tiles);

	public Sprite(int tamanho, int x, int y, SpriteSheet folha) {

		TAMANHO = tamanho;
		pixels = new int[TAMANHO * TAMANHO];
		this.larguraX = x * tamanho;
		this.alturaY = y * tamanho;
		this.lamina = folha;
		Carregar();

	}
	
	public Sprite(int tamanho, int cor){
		TAMANHO = tamanho;
		pixels = new int[TAMANHO*TAMANHO];
		setCor(cor);
	}
	
	private void setCor(int cor){
		for(int i = 0 ;i < TAMANHO*TAMANHO ;i++){
			pixels[i] = cor;
		}
	}

	private void Carregar() {

		for (int y = 0; y < TAMANHO; y++) {
			for (int x = 0; x < TAMANHO; x++) {

				pixels[x + y * TAMANHO] = lamina.pixels[(x + this.larguraX) + (y + this.alturaY) * lamina.TAMANHO];

			}
		}

	}

}
